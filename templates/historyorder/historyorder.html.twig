{% extends 'base.html.twig' %}

{% block body %}
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">История заказов</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{ path('app_index') }}">Главная</a></li>
            <li class="breadcrumbs-item"><a href="{{ path('app_account') }}">Личный кабинет</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>История заказов</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section Section_column Section_columnLeft">
      <div class="wrap">
        <div class="Section-column">
          <div class="Section-columnSection">
            <header class="Section-header">
              <strong class="Section-title">Навигация</strong>
            </header>
            <div class="Section-columnContent">
              <div class="NavigateProfile">
                <ul class="menu menu_vt">
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_account') }}">Личный кабинет</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_profile') }}">Профиль</a></li>
                  <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ path('app_historyorder') }}">История заказов</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_historyview') }}">История просмотра</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="Section-content">
          <div class="Orders">
          {% for order in orders %}
            <div class="Order Order_anons">
              <div class="Order-personal">
                <div class="row">
                  <div class="row-block"><a class="Order-title" href="{{ path('app_oneorder') }}?order={{ order.orderNumber }}">Заказ&#32;<span class="Order-numberOrder">№{{ order.orderNumber }}</span>&#32;от&#32;<span class="Order-dateOrder">{{ order.createdAt|date('Y-m-d') }}</span></a>
                  </div>
                  <div class="row-block">
                    <div class="Order-info Order-info_delivery">
                      <div class="Order-infoType">Тип доставки:
                      </div>
                      <div class="Order-infoContent">{{ order.typeDelivery }}
                      </div>
                    </div>
                    <div class="Order-info Order-info_pay">
                      <div class="Order-infoType">Оплата:
                      </div>
                      <div class="Order-infoContent">{{ order.typePayment }}
                      </div>
                    </div>
                    <div class="Order-info">
                      <div class="Order-infoType">Общая стоимость:
                      </div>
                      <div class="Order-infoContent"><span class="Order-price">{{ order.totalPrice }}$</span><span class="Order-price_old">{{ order.totalPrice*1.2//1 + 0.99 }}$</span>
                      </div>
                    </div>
                    <div class="Order-info Order-info_status">
                      <div class="Order-infoType">Статус:
                      </div>
                      <div class="Order-infoContent">{{ order.orderStatus }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
           {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %} 
