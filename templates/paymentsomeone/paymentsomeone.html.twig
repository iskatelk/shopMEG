{% extends 'base.html.twig' %}

{% block body %}
<div class="Middle Middle_top">
    <div class="Middle-top">
        <div class="wrap">
            <div class="Middle-header">
                <h1 class="Middle-title">Оплата Заказа №{{ orderNumber }}</h1>
                <ul class="breadcrumbs Middle-breadcrumbs">
                    <li class="breadcrumbs-item"><a href="{{ path('app_index') }}">Главная</a></li>
                    <li class="breadcrumbs-item breadcrumbs-item_current"><span>Оплата</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="Section">
        <div class="wrap">
            <form class="form Payment" action="{{ path('app_paymentprogress')}}" method="post">
                <div class="Payment-card">
                    <div class="form-group">
                        <label class="form-label">Чей-то номер счета</label>
                        <input type="hidden" name="ordnmb" value="{{ orderNumber }}">.
                        <input class="form-input Payment-bill" id="numero1" name="numero1" type="text" placeholder="9999 9999" data-mask="9999 9999" data-validate="require pay"/>
                    </div>
                    <div class="form-group"><a class="btn btn_success Payment-generate" href="#" >Сгенирировать случайный счет</a></div>
                </div>

{#                <div class="Payment-pay"><a class="btn btn_primary" href="{{ path('app_paymentprogress')}}?numero1=">Оплатить ${{ totalOrd }}</a></div>#}
                <div><input type="submit" class="btn btn_primary" value="Оплатить ${{ totalOrd }}"/></div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
