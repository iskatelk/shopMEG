{% extends 'base.html.twig' %}

{% block body %}
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Личный кабинет</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{ path('app_index') }}">Главная</a></li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Личный кабинет</span></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section Section_column Section_columnLeft">
      <div class="wrap">
        <div class="Section-column">
          <div class="Section-columnSection">
            <header class="Section-header">
              <strong class="Section-title">Навигация</strong>
            </header>
            <div class="Section-columnContent">
              <div class="NavigateProfile">
                <ul class="menu menu_vt">
                  <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ path('app_account') }}">Личный кабинет</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_profile') }}">Профиль</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_historyorder') }}">История заказов</a></li>
                  <li class="menu-item"><a class="menu-link" href="{{ path('app_historyview') }}">История просмотра</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="Section-content">
          <div class="Account">
            <div class="Account-group">
              <div class="Account-column">
                <div class="Account-avatar"><img src="assets/img/content/home/card.jpg" alt="card.jpg"/>
                </div>
              </div>
              <div class="Account-column">
                <div class="Account-name">{{ userDetails.customer }}
                </div><a class="Account-editLink" href="{{ path('app_profile') }}">Редактировать профиль</a>
              </div>
            </div>
            <div class="Account-group">
              <div class="Account-column Account-column_full">
                <div class="Order Order_anons">
                  {% if orderDetails is not null %}
                  <div class="Order-personal">
                    <div class="row">
                      <div class="row-block"><a class="Order-title" href="{{ path('app_oneorder') }}?order={{ orderDetails.orderNumber }}">Заказ&#32;<span class="Order-numberOrder">№{{ orderDetails.orderNumber }}</span>&#32;от&#32;<span class="Order-dateOrder">{{ orderDetails.createdAt|date('Y-m-d') }}</span></a>
                        <div class="Account-editLink"><a href="{{ path('app_historyorder') }}">История заказов</a>
                        </div>
                      </div>
                      <div class="row-block">
                        <div class="Order-info Order-info_delivery">
                          <div class="Order-infoType">Тип доставки:
                          </div>
                          <div class="Order-infoContent">{{ orderDetails.typeDelivery }}
                          </div>
                        </div>
                        <div class="Order-info Order-info_pay">
                          <div class="Order-infoType">Оплата:
                          </div>
                          <div class="Order-infoContent">{{ orderDetails.typePayment }}
                          </div>
                        </div>
                        <div class="Order-info">
                          <div class="Order-infoType">Общая стоимость:
                          </div>
                          <div class="Order-infoContent">{{ orderDetails.totalPrice }}$
                          </div>
                        </div>
                        <div class="Order-info Order-info_status">
                          <div class="Order-infoType">Статус:
                          </div>
                          <div class="Order-infoContent">{{ orderDetails.orderStatus }}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  {% else %} {{ 'Заказов пока еще нет' }}
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="Account-group">
              <div class="Account-column Account-column_full">
                <header class="Section-header">
                  <h2 class="Section-title">История просмотров
                  </h2>
                </header>
                <div class="Cards Cards_account">
                  <div class="Card"><a class="Card-picture" href="#"><img src="assets/img/content/home/card.jpg" alt="card.jpg"/></a>
                    <div class="Card-content">
                      <strong class="Card-title"><a href="#">Corsair Carbide Series Arctic White Steel</a>
                      </strong>
                      <div class="Card-description">
                        <div class="Card-cost"><span class="Card-priceOld">$115.00</span><span class="Card-price">$85.00</span>
                        </div>
                        <div class="Card-category">Games / xbox
                        </div>
                        <div class="Card-hover"><a class="Card-btn" href="#"><img src="assets/img/icons/card/bookmark.svg" alt="bookmark.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/cart.svg" alt="cart.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/change.svg" alt="change.svg"/></a>
                        </div>
                      </div>
                    </div>
                    <div class="Card-sale">-60%
                    </div>
                  </div>
                  <div class="Card hide_700"><a class="Card-picture" href="#"><img src="assets/img/content/home/card.jpg" alt="card.jpg"/></a>
                    <div class="Card-content">
                      <strong class="Card-title"><a href="#">Barand New Phone Smart Business</a>
                      </strong>
                      <div class="Card-description">
                        <div class="Card-cost"><span class="Card-priceOld">$115.00</span><span class="Card-price">$85.00</span>
                        </div>
                        <div class="Card-category">Games / xbox
                        </div>
                        <div class="Card-hover"><a class="Card-btn" href="#"><img src="assets/img/icons/card/bookmark.svg" alt="bookmark.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/cart.svg" alt="cart.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/change.svg" alt="change.svg"/></a>
                        </div>
                      </div>
                    </div>
                    <div class="Card-sale">-60%
                    </div>
                  </div>
                  <div class="Card hide_md"><a class="Card-picture" href="#"><img src="assets/img/content/home/card.jpg" alt="card.jpg"/></a>
                    <div class="Card-content">
                      <strong class="Card-title"><a href="#">Mavic PRO Mini Drones Hobby RC Quadcopter</a>
                      </strong>
                      <div class="Card-description">
                        <div class="Card-cost"><span class="Card-priceOld">$115.00</span><span class="Card-price">$185.00</span>
                        </div>
                        <div class="Card-category">Digital / xbox
                        </div>
                        <div class="Card-hover"><a class="Card-btn" href="#"><img src="assets/img/icons/card/bookmark.svg" alt="bookmark.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/cart.svg" alt="cart.svg"/></a><a class="Card-btn" href="#"><img src="assets/img/icons/card/change.svg" alt="change.svg"/></a>
                        </div>
                      </div>
                    </div>
                    <div class="Card-sale">-60%
                    </div>
                  </div>
                </div>
                <div class="Account-editLink Account-editLink_view"><a href="historyview.html">Перейти на полный список</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
