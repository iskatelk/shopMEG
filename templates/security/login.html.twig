{% extends 'base.html.twig' %}

{% block body %}
<div class="Middle Middle_top">
    <div class="Middle-top">
        <div class="wrap">
            <div class="Middle-header">
                <h1 class="Middle-title">Авторизация</h1>
                <ul class="breadcrumbs Middle-breadcrumbs">
                    <li class="breadcrumbs-item"><a href="{{ path('app_index') }}">Главная</a></li>
                    <li class="breadcrumbs-item breadcrumbs-item_current"><span>Авторизация</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="Section">
        <div class="wrap">
            <form class="form Authorization" action="{{ path('app_login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row">
                    <div class="row-block">
                        {% if error %}
                            <div class="form-group">
                                <div class="alert alert-warning" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label class="form-label" for="phone">Email</label>
                            <input class="form-input auto-complete-off" id="inputEmail" name="email" type="email" value="{{ last_username }}" placeholder="Ваш Email..."/>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="password">Пароль</label>
                            <input class="form-input auto-complete-off" id="inputPassword" name="password" type="password" autocomplete="new-password" placeholder="Ваш пароль"/>
                        </div>
                        <div class="form-group">
                            <button class="btn btn_primary" type="submit">Войти</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
